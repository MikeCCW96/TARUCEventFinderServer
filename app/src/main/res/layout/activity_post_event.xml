<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mike.taruceventserver.PostEvent">


    <Button
        android:id="@+id/btnMeeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="meeting event" />

    <Button
        android:id="@+id/btnAnnual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMeeting"
        android:layout_centerHorizontal="true"
        android:text="annual general meeting event" />

    <Button
        android:id="@+id/btnClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAnnual"
        android:layout_centerHorizontal="true"
        android:text="Class" />
</RelativeLayout>
